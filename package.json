{
  "name": "commit-generater",
  "displayName": "Commit Generater",
  "description": "AI-powered Git commit message generator using OpenAI-compatible APIs",
  "version": "0.0.3",
  "publisher": "hKFirEs",
  "license": "MIT",
  "icon": "resources/icon.jpg",
  "repository": {
    "type": "git",
    "url": "https://github.com/hkfires/CommitGenerater"
  },
  "homepage": "https://github.com/hkfires/CommitGenerater#readme",
  "bugs": {
    "url": "https://github.com/hkfires/CommitGenerater/issues"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "openai",
    "conventional-commits",
    "scm"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitGenerater.generate",
        "title": "Generate Commit Message",
        "icon": {
          "light": "resources/icon-light.svg",
          "dark": "resources/icon-dark.svg"
        },
        "category": "Commit Generater"
      },
      {
        "command": "commitGenerater.selectModel",
        "title": "Select AI Model",
        "category": "Commit Generater"
      },
      {
        "command": "commitGenerater.setup",
        "title": "Setup Wizard",
        "category": "Commit Generater"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commitGenerater.generate",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    },
    "configuration": {
      "title": "Commit Generater",
      "properties": {
        "commitGenerater.apiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "Base URL for OpenAI-compatible APIs (no trailing slash)"
        },
        "commitGenerater.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key"
        },
        "commitGenerater.model": {
          "type": "string",
          "default": "gpt-5",
          "description": "Model name"
        },
        "commitGenerater.language": {
          "type": "string",
          "enum": [
            "en",
            "zh"
          ],
          "default": "en",
          "description": "Language for generated commit messages"
        },
        "commitGenerater.maxDiffLength": {
          "type": "number",
          "default": 65536,
          "description": "Maximum diff length (characters) sent to the AI"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
